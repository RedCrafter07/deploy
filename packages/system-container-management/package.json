{
	"name": "system-container-management",
	"version": "1.0.0",
	"description": "The system container management for RedDeploy",
	"main": "dist/server/index.js",
	"scripts": {
		"start": "node dist/server/index.js",
		"build": "pnpm run build:client && pnpm run build:server",
		"build:server": "esbuild ./src/server/index.ts --bundle --platform=node --packages=external --outfile=dist/server/index.js",
		"build:client": "webpack -c webpack.config.ts --mode production",
		"dev": "concurrently \"tsx watch --clear-screen=false ./src/index.ts\" \"webpack watch -c webpack.config.ts --mode development\""
	},
	"keywords": [],
	"author": "RedCrafter07",
	"license": "GPL-3.0",
	"dependencies": {
		"@fontsource/figtree": "^5.0.6",
		"@types/express": "^4.17.17",
		"@types/node": "^20.4.5",
		"@types/react": "^18.2.18",
		"@types/react-dom": "^18.2.7",
		"@types/webpack": "^5.28.1",
		"autoprefixer": "^10.4.14",
		"axios": "^1.4.0",
		"css-loader": "^6.8.1",
		"esbuild": "^0.18.17",
		"esbuild-loader": "^3.1.0",
		"express": "^4.18.2",
		"framer-motion": "^10.15.0",
		"html-webpack-plugin": "^5.5.3",
		"http-terminator": "^3.2.0",
		"mongodb": "^5.7.0",
		"postcss": "^8.4.27",
		"postcss-loader": "^7.3.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.14.2",
		"socket.io": "^4.7.1",
		"socket.io-client": "^4.7.1",
		"style-loader": "^3.3.3",
		"tailwindcss": "^3.3.3",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.6",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	},
	"devDependencies": {
		"concurrently": "^8.2.0",
		"tsx": "^3.12.7"
	}
}
